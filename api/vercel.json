{
    "name": "storageAPI",
    "version": 2,
    "builds": [
        {
            "src": "*.js",
            "use": "@now/node-server"
        }
    ],
    "routes": [
        {
            "src": "(.*)",
            "dest": "/index.js",
            "headers":{"Access-Control-Allow-Origin": "*"}
        },
        {
            "src": "/storage/(.*)",
            "dest": "/index.js",  
            "headers":{"Access-Control-Allow-Origin": "*"}
        },
        {
            "src": "/catalog/(.*)",
            "dest": "/index.js",  
            "headers":{"Access-Control-Allow-Origin": "*"}
        },
        {
            "src": "/user/(.*)",
            "dest": "/index.js",  
            "headers":{"Access-Control-Allow-Origin": "*"}
        }
     
    ],
    "env": {
        "MONGODB_URI": "@server-uri",
        "DB_USERNAME": "vinicastelani",
        "DB_PASSWORD": "vini110297"
    }
}